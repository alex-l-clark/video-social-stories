# Copy this file to .env and fill in your actual API keys
# For production deployment, these will be set as Vercel environment variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Replicate Configuration  
REPLICATE_API_TOKEN=your_replicate_api_token_here
REPLICATE_MODEL_VERSION=your_model_version_here

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# Video Settings (optional - defaults will work)
VIDEO_WIDTH=1280
VIDEO_HEIGHT=720
FPS=30

# Polling Settings (optional - defaults will work)
REPLICATE_POLL_INTERVAL_MS=1500
REPLICATE_POLL_TIMEOUT_S=120

# CORS Settings for Production
# This will be updated during deployment to include your frontend URL
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Vercel KV Configuration (for production)
# These will be automatically provided by Vercel when KV is enabled
# KV_REST_API_URL=your_kv_rest_api_url_here  
# KV_REST_API_TOKEN=your_kv_rest_api_token_here
